{
  "manifest_version": 3,
  "name": "Clockify extender",
  "action": {},
  "version": "0.1",
  "description": "Extend clockify with various nice things.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://clockify.me/dashboard"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "appendDecimalHoursDashboard.js"
      ]
    },
    {
      "run_at": "document_end",
      "matches": [
        "https://clockify.me/reports/weekly*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "appendDecimalHoursWeeklyReport.js"
      ]
    }
  ]
}